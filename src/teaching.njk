---
layout: layouts/base.njk
title: Teaching
description: Courses, PhD supervision, and academic service activities.
---

<div class="section-relaxed">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    {# Header - generous spacing for page intro #}
    <header class="mb-16 md:mb-20 animate-on-load">
      <h1 class="type-title text-black dark:text-white mb-6 uppercase border-b-4 border-black dark:border-white pb-2 inline-block" data-i18n="pages.teaching.title">Teaching</h1>
      <p class="text-lg text-stone-800 dark:text-stone-300 max-w-3xl mt-6" data-i18n="pages.teaching.description">
        I teach courses on AI/ML applications in operations, project management, and data analytics at UniMORE.
      </p>
    </header>

    {# Courses Section #}
    <section class="mb-20 md:mb-24 reveal-on-scroll">
      <h2 class="type-heading text-black dark:text-white heading-space-normal uppercase" data-i18n="sections.courses">Courses</h2>
      <div class="space-y-6 reveal-stagger">
        {% for course in teaching.courses %}
          <div class="neo-card neo-hover p-6">
            <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4 mb-4">
              <div>
                <h3 class="text-xl font-bold text-black dark:text-white mb-1 font-display">{{ course.title }}</h3>
                <p class="text-primary-600 dark:text-primary-400 font-semibold">{{ course.degree }}</p>
              </div>
              <div class="flex flex-wrap gap-2">
                <span class="neo-tag-accent">
                  {{ course.role }}
                </span>
                <span class="neo-tag">
                  {{ course.credits }}
                </span>
              </div>
            </div>
            <p class="text-stone-800 dark:text-stone-300 mb-3">{{ course.description }}</p>
            <div class="flex items-center gap-2 text-sm text-stone-600 dark:text-stone-400 font-semibold">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              {{ course.university }}
              {% if course.owner %}
                <span class="mx-1">&middot;</span>
                Course Owner: {{ course.owner }}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </section>

    {# PhD Supervision #}
    <section class="mb-20 md:mb-24 reveal-on-scroll">
      <h2 class="type-heading text-black dark:text-white heading-space-normal uppercase" data-i18n="sections.phdSupervision">PhD Supervision</h2>
      <div class="grid sm:grid-cols-2 gap-6 reveal-stagger">
        {% for student in teaching.supervision %}
          <div class="neo-card neo-hover p-6">
            <div class="flex items-start gap-4">
              <div class="neo-icon-box flex-shrink-0">
                <svg class="w-6 h-6 text-primary-700 dark:text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-black dark:text-white font-display">{{ student.name }}</h3>
                <p class="text-sm text-primary-600 dark:text-primary-400 font-semibold">{{ student.type }} &middot; {{ student.cycle }}</p>
                <p class="text-sm text-stone-600 dark:text-stone-400 mt-1">{{ student.school }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>

    {# Academic Service - final section #}
    <section class="reveal-on-scroll">
      <h2 class="type-heading text-black dark:text-white heading-space-normal uppercase" data-i18n="sections.academicService">Academic Service</h2>
      <div class="space-y-4 reveal-stagger">
        {% for service in teaching.service %}
          <div class="neo-card p-5">
            <h3 class="font-bold text-black dark:text-white mb-2 font-display">{{ service.role }}</h3>
            {% if service.venues %}
              <ul class="space-y-1">
                {% for venue in service.venues %}
                  <li class="text-sm text-stone-800 dark:text-stone-300 flex items-center gap-2">
                    <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"/>
                    </svg>
                    {{ venue }}
                  </li>
                {% endfor %}
              </ul>
            {% elif service.venue %}
              <p class="text-sm text-stone-800 dark:text-stone-300">{{ service.venue }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </section>
  </div>
</div>
