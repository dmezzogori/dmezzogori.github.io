{
  "name": "dmezzogori.github.io",
  "version": "1.0.0",
  "description": "Repository for my personal website, to showcase my projects and to share my thoughts.",
  "private": true,
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/assets/css/main.css -o ./_site/assets/css/main.css --minify",
    "watch:css": "npx tailwindcss -i ./src/assets/css/main.css -o ./_site/assets/css/main.css --watch",
    "build:11ty": "eleventy",
    "watch:11ty": "eleventy --serve",
    "start": "npm-run-all --parallel watch:*",
    "build": "npm-run-all build:css build:11ty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmezzogori/dmezzogori.github.io.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/dmezzogori/dmezzogori.github.io/issues"
  },
  "homepage": "https://github.com/dmezzogori/dmezzogori.github.io#readme",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.22",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  }
}
