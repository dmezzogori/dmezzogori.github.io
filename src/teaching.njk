---
layout: layouts/base.njk
title: Teaching
description: Courses, PhD supervision, and academic service activities.
---

<div class="py-12 md:py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    {# Header #}
    <header class="mb-12">
      <h1 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-4">Teaching</h1>
      <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl">
        I teach courses on AI/ML applications in operations, project management, and data analytics at UniMORE.
      </p>
    </header>

    {# Courses Section #}
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">Courses</h2>
      <div class="space-y-6">
        {% for course in teaching.courses %}
          <div class="p-6 bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700">
            <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4 mb-4">
              <div>
                <h3 class="text-xl font-semibold text-slate-900 dark:text-white mb-1">{{ course.title }}</h3>
                <p class="text-primary-600 dark:text-primary-400">{{ course.degree }}</p>
              </div>
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 text-sm bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded-full">
                  {{ course.role }}
                </span>
                <span class="px-3 py-1 text-sm bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 rounded-full">
                  {{ course.credits }}
                </span>
              </div>
            </div>
            <p class="text-slate-600 dark:text-slate-400 mb-3">{{ course.description }}</p>
            <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-500">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              {{ course.university }}
              {% if course.owner %}
                <span class="mx-1">&middot;</span>
                Course Owner: {{ course.owner }}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </section>

    {# PhD Supervision #}
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">PhD Supervision</h2>
      <div class="grid sm:grid-cols-2 gap-6">
        {% for student in teaching.supervision %}
          <div class="p-6 bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-slate-900 dark:text-white">{{ student.name }}</h3>
                <p class="text-sm text-primary-600 dark:text-primary-400">{{ student.type }} &middot; {{ student.cycle }}</p>
                <p class="text-sm text-slate-500 dark:text-slate-500 mt-1">{{ student.school }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>

    {# Academic Service #}
    <section>
      <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">Academic Service</h2>
      <div class="space-y-4">
        {% for service in teaching.service %}
          <div class="p-5 bg-white dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700">
            <h3 class="font-semibold text-slate-900 dark:text-white mb-2">{{ service.role }}</h3>
            {% if service.venues %}
              <ul class="space-y-1">
                {% for venue in service.venues %}
                  <li class="text-sm text-slate-600 dark:text-slate-400 flex items-center gap-2">
                    <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"/>
                    </svg>
                    {{ venue }}
                  </li>
                {% endfor %}
              </ul>
            {% elif service.venue %}
              <p class="text-sm text-slate-600 dark:text-slate-400">{{ service.venue }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </section>
  </div>
</div>
