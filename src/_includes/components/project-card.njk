{# Project card component - Neobrutalist style #}
{# Usage: {% set project = item %}{% include "components/project-card.njk" %} #}
<article class="neo-card neo-hover p-6 h-full flex flex-col">
  <!-- Header with icon -->
  <div class="flex items-start gap-4 mb-4">
    {% if project.icon %}
      <div class="neo-icon-box flex-shrink-0">
        {% if project.icon == "code" %}
          <svg class="w-6 h-6 text-primary-700 dark:text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
          </svg>
        {% elif project.icon == "cpu" %}
          <svg class="w-6 h-6 text-primary-700 dark:text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
          </svg>
        {% elif project.icon == "factory" %}
          <svg class="w-6 h-6 text-primary-700 dark:text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
        {% elif project.icon == "chart" %}
          <svg class="w-6 h-6 text-primary-700 dark:text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        {% else %}
          <svg class="w-6 h-6 text-primary-700 dark:text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
          </svg>
        {% endif %}
      </div>
    {% endif %}

    <div class="flex-1">
      <h3 class="text-lg font-bold text-black dark:text-white font-display">
        {{ project.title }}
      </h3>
      {% if project.subtitle %}
        <p class="text-sm text-primary-600 dark:text-primary-400 font-semibold">{{ project.subtitle }}</p>
      {% endif %}
    </div>
  </div>

  <!-- Description -->
  <p class="text-stone-700 dark:text-stone-300 text-sm flex-1 mb-4">
    {{ project.description }}
  </p>

  <!-- Technologies -->
  {% if project.technologies %}
    <div class="flex flex-wrap gap-2 mb-4">
      {% for tech in project.technologies %}
        <span class="neo-tag-accent">
          {{ tech }}
        </span>
      {% endfor %}
    </div>
  {% endif %}

  <!-- Links -->
  <div class="flex flex-wrap gap-3 mt-auto pt-4 border-t-2 border-black dark:border-white">
    {% if project.github %}
      <a href="{{ project.github }}" target="_blank" rel="noopener noreferrer"
         class="inline-flex items-center gap-1.5 text-sm font-bold text-black dark:text-white hover:text-primary-600 dark:hover:text-primary-400 no-underline">
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        GitHub
      </a>
    {% endif %}
    {% if project.docs %}
      <a href="{{ project.docs }}" target="_blank" rel="noopener noreferrer"
         class="inline-flex items-center gap-1.5 text-sm font-bold text-black dark:text-white hover:text-primary-600 dark:hover:text-primary-400 no-underline">
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        Docs
      </a>
    {% endif %}
    {% if project.doi %}
      <a href="https://doi.org/{{ project.doi }}" target="_blank" rel="noopener noreferrer"
         class="inline-flex items-center gap-1.5 text-sm font-bold text-black dark:text-white hover:text-primary-600 dark:hover:text-primary-400 no-underline">
        <i class="ai ai-doi"></i>
        Paper
      </a>
    {% endif %}
  </div>
</article>
