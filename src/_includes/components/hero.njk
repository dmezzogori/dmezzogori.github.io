{# Hero section for home page - Neobrutalist style #}
<section class="pt-12 md:pt-16 pb-8 md:pb-12">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-16">
      <!-- Avatar with neobrutalist shadow -->
      <div class="flex-shrink-0">
        <picture>
          <source type="image/webp"
                  srcset="/assets/images/avatar-224.webp 224w, /assets/images/avatar-448.webp 448w"
                  sizes="(min-width: 768px) 224px, 176px">
          <img src="/assets/images/avatar-448.jpg"
               srcset="/assets/images/avatar-224.jpg 224w, /assets/images/avatar-448.jpg 448w"
               sizes="(min-width: 768px) 224px, 176px"
               alt="Davide Mezzogori"
               width="224" height="224"
               class="w-44 h-44 md:w-56 md:h-56 object-cover neo-avatar">
        </picture>
      </div>

      <!-- Content -->
      <div class="text-center md:text-left">
        <h1 class="text-4xl md:text-5xl font-bold text-black dark:text-white mb-4 uppercase tracking-tight">
          Davide Mezzogori
        </h1>
        <p class="text-xl md:text-2xl text-primary-600 dark:text-primary-400 font-bold mb-4 font-display" data-i18n="hero.tagline">
          Research Scientist &middot; AI & Operations Expert
        </p>
        <p class="text-lg text-stone-800 dark:text-stone-300 max-w-2xl mb-6" data-i18n="hero.subtitle">
          Bridging Academia and Industry through AI, Machine Learning, and Operations Research
        </p>

        <!-- Social Links -->
        {% include "components/social-links.njk" %}
      </div>
    </div>
  </div>
</section>
