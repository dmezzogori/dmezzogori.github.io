<div class="py-12 md:py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    {# Header #}
    <header class="mb-12">
      <h1 class="text-3xl md:text-4xl font-bold text-black dark:text-white mb-4 uppercase tracking-tight border-b-4 border-black dark:border-white pb-2 inline-block">Research</h1>
      <p class="text-lg text-stone-800 dark:text-stone-300 max-w-3xl mt-4">
        My research focuses on the application of Artificial Intelligence and Machine Learning to operations management,
        logistics optimization, and manufacturing systems.
      </p>
    </header>

    {# Research Interests #}
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-black dark:text-white mb-6 uppercase tracking-tight">Research Interests</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {% set interests = [
          "AI/ML for Operations Management",
          "Logistics and Supply Chain Optimization",
          "Discrete Event Simulation",
          "Metaheuristics for Scheduling and Picking",
          "Reinforcement Learning for Production Planning",
          "Automated Storage and Retrieval Systems (AS/RS)",
          "Digital Twins for Manufacturing",
          "RFID Applications in Retail",
          "Lean Manufacturing and Process Improvement"
        ] %}
        {% for interest in interests %}
          <div class="flex items-center gap-3 p-4 neo-card">
            <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-stone-800 dark:text-stone-200 font-semibold">{{ interest }}</span>
          </div>
        {% endfor %}
      </div>
    </section>

    {# Current Projects #}
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-black dark:text-white mb-6 uppercase tracking-tight">Current Research Projects</h2>
      <div class="space-y-6">
        <div class="neo-card neo-hover p-6">
