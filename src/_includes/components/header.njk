<header class="sticky top-0 z-50 bg-white dark:bg-stone-900 border-b-4 border-black dark:border-white">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo / Name -->
      <a href="/" class="flex items-center space-x-2 text-black dark:text-white font-bold text-lg no-underline hover:text-primary-600 dark:hover:text-primary-400">
        <span class="font-display uppercase tracking-tight">Davide Mezzogori</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-2">
        {% for item in navigation %}
          <a href="{{ item.url }}"
             class="px-3 py-1.5 text-sm font-bold no-underline
                    {% if page.url == item.url %}
                      neo-nav-active
                    {% else %}
                      text-black dark:text-white border-2 border-transparent hover:border-black dark:hover:border-white hover:bg-primary-100 dark:hover:bg-primary-900
                    {% endif %}">
            {{ item.text }}
          </a>
        {% endfor %}

        <!-- Theme Toggle -->
        {% include "components/theme-toggle.njk" %}
      </div>

      <!-- Mobile menu button -->
      <div class="flex md:hidden items-center space-x-2">
        {% include "components/theme-toggle.njk" %}
        <button type="button" id="mobile-menu-button"
                class="p-2 border-2 border-black dark:border-white text-black dark:text-white hover:bg-primary-200 dark:hover:bg-primary-800"
                aria-expanded="false" aria-controls="mobile-menu">
          <span class="sr-only">Open menu</span>
          <!-- Hamburger icon -->
          <svg class="h-6 w-6" id="menu-icon-open" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
          <!-- Close icon (hidden by default) -->
          <svg class="h-6 w-6 hidden" id="menu-icon-close" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="hidden md:hidden pb-4" id="mobile-menu">
      <div class="flex flex-col space-y-2 border-t-2 border-black dark:border-white pt-4">
        {% for item in navigation %}
          <a href="{{ item.url }}"
             class="px-3 py-2 text-base font-bold no-underline
                    {% if page.url == item.url %}
                      neo-nav-active
                    {% else %}
                      text-black dark:text-white border-2 border-transparent hover:border-black dark:hover:border-white hover:bg-primary-100 dark:hover:bg-primary-900
                    {% endif %}">
            {{ item.text }}
          </a>
        {% endfor %}
      </div>
    </div>
  </nav>
</header>
